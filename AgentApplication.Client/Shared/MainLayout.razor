@inherits LayoutComponentBase

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="work_outline"></MatIconButton>
                <MatAppBarTitle>Company Catalog</MatAppBarTitle>     
            </MatAppBarSection >
            <MatAppBarSection Align="@MatAppBarSectionAlign.Start">    
                <Search/>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatButtonLink Href="/Register" Unelevated="true">Register</MatButtonLink>
                <MatButtonLink Href="/SignIn" Unelevated="true">Sign In</MatButtonLink>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
 
    <MatAppBarContent>
        @Body
    </MatAppBarContent>
</MatAppBarContainer>
